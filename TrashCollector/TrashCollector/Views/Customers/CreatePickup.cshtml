@model TrashCollector.Models.Pickup

@{
    ViewData["Title"] = "CreatePickup";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<h1>CreatePickup</h1>

<h4>Pickup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer_Id" />
            <div class="form-group">
                <label asp-for="Address_Id" class="control-label"></label>
                <select asp-for="Address_Id" class ="form-control" asp-items='new SelectList(Model.Addresses, "Id", "Single_Line_Address")'></select>
            </div>
            <div class="form-group">
                <label asp-for="Day_Id" class="control-label"></label>
                <select asp-for="Day_Id" class ="form-control" asp-items='new SelectList(Model.Days, "Id", "Name")'></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

