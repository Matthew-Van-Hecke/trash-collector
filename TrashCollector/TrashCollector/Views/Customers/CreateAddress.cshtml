@model TrashCollector.Models.Address

@{
    ViewData["Title"] = "CreateAddress";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<h1>CreateAddress</h1>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAddress">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Street_Number_and_Name" class="control-label"></label>
                <input asp-for="Street_Number_and_Name" class="form-control" />
                <span asp-validation-for="Street_Number_and_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip_Code" class="control-label"></label>
                <input asp-for="Zip_Code" class="form-control" />
                <span asp-validation-for="Zip_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="USStateId" class="control-label"></label>
                <select asp-for="USStateId" class ="form-control" asp-items='new SelectList(Model.USStates, "Id", "Name")'></select>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Id" class="control-label"></label>
                <select asp-for="Customer_Id" class ="form-control" asp-items='new SelectList(Model.Customers, "Id", "Name")'></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

